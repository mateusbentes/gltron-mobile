<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>GltronMobileGame</RootNamespace>
    <AssemblyName>GltronMobileGame</AssemblyName>
  </PropertyGroup>
  <PropertyGroup>
    <TargetFramework>net9.0-android</TargetFramework>
    <SupportedOSPlatformVersion>24</SupportedOSPlatformVersion>
    <TargetAndroidVersion>36</TargetAndroidVersion>
    <AndroidMinSdkVersion>24</AndroidMinSdkVersion>
    <AndroidTargetFrameworkVersion>v36.0</AndroidTargetFrameworkVersion>
    <AndroidTargetSdkVersion>36</AndroidTargetSdkVersion>
    <TargetFrameworkVersion>v36.0</TargetFrameworkVersion>
    <AndroidCompileSdkVersion>36</AndroidCompileSdkVersion>
    <AndroidUseIntermediateDesignerFile>false</AndroidUseIntermediateDesignerFile>
    <UseAndroidX>true</UseAndroidX>
    <OutputType>Exe</OutputType>
    <ApplicationId>gltron.org.gltronmobile</ApplicationId>
    <ApplicationVersion>2</ApplicationVersion>
    <ApplicationDisplayVersion>2.0</ApplicationDisplayVersion>
    
    <!-- FNA Configuration -->
    <AndroidLinkMode>None</AndroidLinkMode>
    <!-- Suppress .NET 9 compatibility warnings -->
    <SuppressTfmSupportBuildWarnings>true</SuppressTfmSupportBuildWarnings>
    <EnablePreviewFeatures>true</EnablePreviewFeatures>
  </PropertyGroup>
  
  <!-- FNA requires unsafe code -->
  <PropertyGroup>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);FNA</DefineConstants>
  </PropertyGroup>
  
  <!-- Explicitly include our game files -->
  <ItemGroup>
    <Compile Include="*.cs" />
    <Compile Include="Video\*.cs" />
    <Compile Include="Sound\*.cs" />
  </ItemGroup>
  
  <!-- Include FNA source files -->
  <ItemGroup>
    <Compile Include="FNA\src\**\*.cs" />
    <!-- Exclude platform-specific files that don't apply to Android -->
    <Compile Remove="FNA\src\FNAPlatform\SDL3_FNAPlatform.cs" />
  </ItemGroup>
  
  <!-- Add Android-specific properties for FNA -->
  <PropertyGroup>
    <AndroidUseAapt2>true</AndroidUseAapt2>
    <AndroidCreatePackagePerAbi>false</AndroidCreatePackagePerAbi>
    <!-- Use latest Android SDK version 34 -->
    <AndroidSdkBuildToolsVersion>36.0.0</AndroidSdkBuildToolsVersion>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\GltronMobileEngine\GltronMobileEngine.csproj" />
  </ItemGroup>

  <!-- FNA Content: Package raw content files (not XNBs) -->
  <ItemGroup>
    <!-- Include all raw content files for FNA -->
    <AndroidAsset Include="Content\Assets\**\*.*" />
    <AndroidAsset Include="Content\Fonts\**\*.*" />
    <!-- Include audio files -->
    <AndroidAsset Include="Content\**\*.mp3" />
    <AndroidAsset Include="Content\**\*.ogg" />
    <AndroidAsset Include="Content\**\*.wav" />
    <AndroidAsset Include="Content\**\*.m4a" />
    <!-- Include image files -->
    <AndroidAsset Include="Content\**\*.png" />
    <AndroidAsset Include="Content\**\*.jpg" />
    <AndroidAsset Include="Content\**\*.jpeg" />
    <!-- Include font files -->
    <AndroidAsset Include="Content\**\*.ttf" />
    <AndroidAsset Include="Content\**\*.otf" />
    <!-- Include 3D model files -->
    <AndroidAsset Include="Content\**\*.fbx" />
    <AndroidAsset Include="Content\**\*.obj" />
    <AndroidAsset Include="Content\**\*.mtl" />
  </ItemGroup>
</Project>
