<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>GltronMobileGame</RootNamespace>
    <AssemblyName>GltronMobileGame</AssemblyName>
  </PropertyGroup>
  <PropertyGroup>
    <TargetFramework>net8.0-android</TargetFramework>
    <SupportedOSPlatformVersion>24</SupportedOSPlatformVersion>
    <TargetAndroidVersion>34</TargetAndroidVersion>
    <AndroidMinSdkVersion>24</AndroidMinSdkVersion>
    <AndroidTargetFrameworkVersion>v34.0</AndroidTargetFrameworkVersion>
    <AndroidTargetSdkVersion>34</AndroidTargetSdkVersion>
    <TargetFrameworkVersion>v34.0</TargetFrameworkVersion>
    <AndroidCompileSdkVersion>34</AndroidCompileSdkVersion>
    <AndroidUseIntermediateDesignerFile>false</AndroidUseIntermediateDesignerFile>
    <UseAndroidX>true</UseAndroidX>
    <OutputType>Exe</OutputType>
    <ApplicationId>gltron.org.gltronmobile</ApplicationId>
    <ApplicationVersion>1</ApplicationVersion>
    <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
    
    <!-- MonoGame Content Pipeline Configuration -->
    <MonoGamePlatform>Android</MonoGamePlatform>
    <MonoGameContentBuilderExe>mgcb</MonoGameContentBuilderExe>
    <AndroidLinkMode>None</AndroidLinkMode>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.2.1105" />
    <PackageReference Include="MonoGame.Framework.Android" Version="3.8.2.1105" />
  </ItemGroup>
  
  <!-- Add Android-specific properties that MonoGame might need -->
  <PropertyGroup>
    <AndroidUseAapt2>true</AndroidUseAapt2>
    <AndroidCreatePackagePerAbi>false</AndroidCreatePackagePerAbi>
    <!-- Use latest Android SDK version 34 -->
    <AndroidSdkBuildToolsVersion>34.0.0</AndroidSdkBuildToolsVersion>
  </PropertyGroup>
  
  <!-- Use proper MonoGame content integration -->
  <ItemGroup>
    <MonoGameContentReference Include="Content/Content.mgcb" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\GltronMobileEngine\GltronMobileEngine.csproj" />
  </ItemGroup>
  
  <!-- CRITICAL FIX: Ensure .obj/.mtl files are copied to output for runtime loading -->
  <ItemGroup>
    <None Include="Content\Assets\lightcyclehigh.obj">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="Content\Assets\lightcycle.mtl">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="Content\Assets\recognizerhigh.obj">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="Content\Assets\recognizer.mtl">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>