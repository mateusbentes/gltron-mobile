<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net9.0;net9.0-android</TargetFrameworks>
    <OutputType>Library</OutputType>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>GltronMobileEngine</RootNamespace>
    <AssemblyName>GltronMobileEngine</AssemblyName>
    
    <!-- Android-specific properties -->
    <SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net9.0-android'">24.0</SupportedOSPlatformVersion>
    <TargetPlatformVersion Condition="'$(TargetFramework)' == 'net9.0-android'">36.0</TargetPlatformVersion>
    

    <!-- FNA Configuration -->
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);FNA</DefineConstants>
    <!-- Suppress .NET 9 compatibility warnings for FNA -->
    <SuppressTfmSupportBuildWarnings>true</SuppressTfmSupportBuildWarnings>
    <EnablePreviewFeatures>true</EnablePreviewFeatures>
    <!-- Disable SDK auto-generated assembly info to avoid conflicts with FNA -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>
  <ItemGroup>
    <!-- FNA project reference for all platforms -->
    <ProjectReference Include="..\GltronMobileGame\FNA\FNA.NetStandard.csproj" />
    <!-- Note: Content building is handled by the game projects, not the engine -->
  </ItemGroup>
  <ItemGroup>
    <!-- Exclude game-level classes from engine build -->
    <Compile Remove="Game1.cs" />
    <Compile Remove="GLTronGame.cs" />
  </ItemGroup>
</Project>
